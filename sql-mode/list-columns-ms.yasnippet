select
    table_name tabla,
    column_name columna,
    data_type tipo,
    character_octet_length tamanoBytes,
    is_nullable permite_null
from information_schema.columns
where (table_catalog = '${1:base-datos}')
    and (table_name = '${2:tabla}')
order by table_catalog, table_name
