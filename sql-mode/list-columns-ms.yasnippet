select
    COLUMN_NAME columna,
    DATA_TYPE tipo,
    CHARACTER_OCTET_LENGTH bytes,
    IS_NULLABLE anulable
from INFORMATION_SCHEMA.COLUMNS
where (TABLE_SCHEMA + '.' + TABLE_NAME = '${1:dbo.tabla}')
order by TABLE_SCHEMA, TABLE_NAME
